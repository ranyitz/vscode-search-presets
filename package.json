{
  "name": "search-presets",
  "displayName": "Search Presets",
  "icon": "images/logo.png",
  "description": "Configure presets for VSCode's search",
  "repository": {
    "url": "https://github.com/ranyitz/vscode-search-presets"
  },
  "version": "0.1.3",
  "publisher": "ranyitz",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:search-presets.search"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "search-presets.search",
        "title": "Search Presets: ðŸ”Ž Search"
      },
      {
        "command": "search-presets.createPreset",
        "title": "Search Presets: ðŸ’¾ Create Preset"
      }
    ],
    "keybindings": [
      {
        "command": "search-presets.search",
        "key": "shift+alt+f",
        "mac": "shift+alt+f"
      }
    ],
    "configuration": {
      "title": "Search Presets",
      "properties": {
        "search-presets.isCaseSensitive": {
          "type": [
            "boolean",
            "null"
          ],
          "description": "Default to \"Match Case (Aa)\"",
          "default": null
        },
        "search-presets.isRegex": {
          "type": [
            "boolean",
            "null"
          ],
          "description": "Default to \"Use Regular Expressions (.*)\"",
          "default": null
        },
        "search-presets.matchWholeWord": {
          "type": [
            "boolean",
            "null"
          ],
          "description": "Default to \"Match Whole Word (_ab_)\"",
          "default": null
        },
        "search-presets.triggerSearch": {
          "type": [
            "boolean",
            "null"
          ],
          "description": "Default to trigger search after selecting a preset",
          "default": true
        },
        "search-presets.custom": {
          "order": 1,
          "type": "object",
          "description": "Search Presets configuration",
          "additionalProperties": {
            "type": "object",
            "description": "preset object",
            "properties": {
              "filesToInclude": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "Files to include in the search",
                "default": ""
              },
              "filesToExclude": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "Files to exclude from the search",
                "default": ""
              },
              "isCaseSensitive": {
                "type": [
                  "boolean",
                  "null"
                ],
                "description": "Match Case (Aa)",
                "default": null
              },
              "isRegex": {
                "type": [
                  "boolean",
                  "null"
                ],
                "description": "Use Regular Expressions (.*)",
                "default": null
              },
              "matchWholeWord": {
                "type": [
                  "boolean",
                  "null"
                ],
                "description": "Match Whole Word (_ab_)",
                "default": null
              },
              "triggerSearch": {
                "type": [
                  "boolean",
                  "null"
                ],
                "description": "Trigger search after selecting a preset",
                "default": null
              },
              "query": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "Enforce a specific search query"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts && prettier --write ."
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.14.185",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "auto-changelog": "^2.5.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "zod": "^3.19.1"
  }
}
